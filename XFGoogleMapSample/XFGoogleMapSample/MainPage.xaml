<?xml version="1.0" encoding="utf-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:local="clr-namespace:XFGoogleMapSample"
	x:Class="XFGoogleMapSample.MainPage"
	Title="Xamarin.Forms.GoogleMaps sample">

  <ContentPage.Content>
    <ScrollView>
      <StackLayout
        HorizontalOptions="Fill"
        VerticalOptions="Fill"
        Orientation="Vertical">

        <Button x:Name="buttonBasicMap"
            Text="Basic Map" />
        <Button x:Name="buttonPins"
            Text="Pins" />
        <Button x:Name="buttonShapes"
            Text="Shapes" />
        <Button x:Name="buttonTiles"
            Text="Tiles" />
        <Button x:Name="buttonCustomPins"
                Text="Custom Pin" />
        <Button x:Name="buttonShapesWithInitialize"
                Text="Shapes with initialize" />
        <Button x:Name="buttonBindingPin"
                Text="Binding Pin" />
        <Button x:Name="buttonGroundOverlays"
                Text="GroundOverlays" />
        <Button x:Name="buttonBindablePinsSource"
                Text="Bindable PinsSource" />
        <Button x:Name="buttonBindableCirclesSource"
                Text="Bindable CirclesSource" />
        <Button x:Name="buttonBindableProperties"
                Text="Bindable Properties" />
      </StackLayout>
    </ScrollView>
  </ContentPage.Content>
</ContentPage>
